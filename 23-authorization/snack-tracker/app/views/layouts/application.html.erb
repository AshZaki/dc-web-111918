<!DOCTYPE html>
<html>
  <head>
    <title>SnackTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <% if session.has_key? "user_id" %>
        <p>Welcome <%= current_user.username.capitalize %></p>
        <p class="right"><%= link_to "Log Out", logout_path %></p>
      <% else %>
        <p> <%= link_to "Log In", login_path %></p>
      <% end %>

    </div>
    <%= yield %>
  </body>
</html>
